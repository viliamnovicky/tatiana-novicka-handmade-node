doctype html
html(lang="sk")
    head
        block head
            meta(charset="UTF-8")
            meta(http-equiv="X-UA-Compatible", content="IE=edge")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            if (currentUrl === "products" )
                script(src="./../../js/bundle.js" defer) 
            else if (currentUrl === "product")
                script(src="./../../../js/bundle.js" defer) 
            else if (currentUrl === "update-product")
                script(src="./../../js/bundle.js" defer) 
            else
                script(src="./js/bundle.js" defer) 

            link(rel="stylesheet", href="/css/style.css")
            link(rel='shortcut icon' type='image/png' href='/img/favicon.ico')
            link(rel="preconnect" href="https://fonts.googleapis.com")
            link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
            link(href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet")
            link(href="https://fonts.googleapis.com/css2?family=Dancing+Script&family=Quicksand:wght@300&display=swap" rel="stylesheet")
            title=title  
    
    body 
        // HEADER
        include _header

        // CONTENT
        block content
        
        // FOOTER
        include _footer
        
        // MODAL
        include _modal